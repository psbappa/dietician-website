generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb" // "mysql" | "postgresql" | "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // Works for MongoDB
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
}
